                                    <th>Heating Costs</th>
                                    <th>Ancillary Costs</th>
                                    <th>Billing Period</th>
                                    <th>Day of Invoice</th>
                                    <th>Start Date</th>
                                </thead>
                                <t t-foreach="tenancy.rent_ids" t-as="rent">
                                    <tbody>
                                        <tr>
                                            <td><span t-field="rent.rent" t-options="{'widget': 'monetary', 'display_currency': website.company_id.currency_id}"/></td>
                                            <td><span t-field="rent.heating_costs" t-options="{'widget': 'monetary', 'display_currency': website.company_id.currency_id}"/></td>
                                            <td><span t-field="rent.ancillary_costs" t-options="{'widget': 'monetary', 'display_currency': website.company_id.currency_id}"/></td>
                                            <td><span t-field="rent.billing_period"/></td>
                                            <td><span t-field="rent.day_of_invoice"/></td>
                                            <td><span t-field="rent.date_start"/></td>
