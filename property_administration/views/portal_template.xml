                                        <div class="caption small">
                                            <a class="ml4 small text-uppercase" t-attf-href="/web/content/#{attechment_id.id}?download=true" t-attf-title="attechment_id.id"><b><t t-esc="ext"/></b></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
            <div class="mt32 container">
                <h4><strong>Message and communication history</strong></h4>
                <div class="mt16">
                    <t t-call="portal.message_thread">
                        <t t-set="object" t-value="tenancy"/>
                    </t>
                </div>
            </div>
        </t>
    </template>
    <!-- Custom End -->
</odoo>